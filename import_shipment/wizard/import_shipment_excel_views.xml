<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_shipment_excel_form" model="ir.ui.view">
        <field name="name">import.shipment.excel.form</field>
        <field name="model">import.shipment.excel</field>
        <field name="arch" type="xml">
            <form string="Import Shipments from Excel">
                <group>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </group>
                <div class="text-muted">
                    <p>Excel Format:</p>
                    <ul>
                        <li>Column A: Supplier Reference</li>
                        <li>Column B: PO Number</li>
                        <li>Column C: Product Code (Internal Reference)</li>
                        <li>Column D: Quantity</li>
                    </ul>
                </div>
                <footer>
                    <button name="action_import" string="Import" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_shipment_excel" model="ir.actions.act_window">
        <field name="name">Import Shipments via Excel</field>
        <field name="res_model">import.shipment.excel</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_import_shipment_excel"
              name="Upload Shipment Excel"
              parent="purchase.menu_procurement_management"
              action="action_import_shipment_excel"
              sequence="25"/>
</odoo>
